@page "/configuracoes-page"

@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Configurações</PageTitle>

<div class="settings-container">
    <p class="main-title">Configurações</p>

    <section class="section">
        <h2>Perfil</h2>

        <InputText @bind-Value="Username" placeholder="Nome de usuário" class="mb-3 input-text" />
        <InputText @bind-Value="Email" placeholder="Email" class="mb-3 input-text" />
        <InputText @bind-Value="Password" placeholder="Senha" type="password" class="mb-3 input-text" />
    </section>

    <section class="section">
        <h2>Notificações</h2>

        <label class="checkbox">
            <InputCheckbox @bind-Value="NotificationsEmail" />
            Receber notificações por email
        </label>

        <label class="checkbox">
            <InputCheckbox @bind-Value="NotificationsPush" />
            Receber notificações push
        </label>
    </section>

    <div class="actions">
        <button class="btn-default" @onclick="SaveSettings">Salvar</button>
    </div>
</div>

@code {
    private string Username { get; set; } = "Admin";
    private string Email { get; set; } = "admin@ghours.com";
    private string Password { get; set; } = "";

    private bool NotificationsEmail { get; set; } = true;
    private bool NotificationsPush { get; set; } = false;

    private void SaveSettings()
    {
        Console.WriteLine("Salvando configurações:");
        Console.WriteLine($"Username: {Username}");
        Console.WriteLine($"Email: {Email}");
        Console.WriteLine($"Password: {Password}");
        Console.WriteLine($"Notifications: Email={NotificationsEmail}, Push={NotificationsPush}");
        // Para exibir alerta no navegador
        if (JS is not null)
        {
            JS.InvokeVoidAsync("alert", "Configurações salvas!");
        }
    }

    [Inject] private IJSRuntime? JS { get; set; }
}

    <style>
    .main-title {
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

        .main-title::before {
            content: "";
            width: 8px;
            height: 100%;
            border: 2px solid #e39b34;
            margin-right: 0.5rem;
        }

    .section {
        margin-bottom: 2rem;
    }

        .section h2 {
            font-size: 1.2rem;
            font-weight: 500;
            margin-bottom: 0.8rem;
        }

    .mb-3 {
        margin-bottom: 10px;
    }

    .checkbox {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }

    .actions {
        margin-top: 1rem;
        display: flex;
        justify-content: flex-start;
    }

    .input-text {
        display: block;
        width: 100%;
        padding: 6px 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-default {
        background-color: #e39b34;
        color: white;
        border: none;
        padding: 8px 16px;
        cursor: pointer;
        border-radius: 4px;
    }

        .btn-default:hover {
            background-color: #d1882c;
        }

    </style>