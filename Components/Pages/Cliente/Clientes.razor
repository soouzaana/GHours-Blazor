@page "/clientes"
@using AppExemplo.Models;
@inject ClienteDAO ClienteDAO;
@inject NavigationManager Navigation;
@using AppExemplo.Components
@using AppExemplo.Components.VV
@using AppExemplo.Components.icons
@rendermode InteractiveServer

<PageTitle>Clientes Cadastrados</PageTitle>

<style>
	.main-title {
		margin-bottom: 1.5rem;
		font-weight: 600;
	}

    .main-title::before {
			content: "";
			width: 8px;
			height: 100%;
			border: 2px solid #ffc30d;
			margin-right: 0.5rem;
	}

    .btn-novo-cliente {
    position: fixed;
    top: 120px;
    left: 1150px;
    width: 55px;
    height: 55px;
    border-radius: 25%;
    background-color: #ffc30d;
    color: white;
    border: none;
    font-size: 32px;
    font-weight: bold;
    cursor: pointer;
    box-shadow: 0 4px 10px rgba(0,0,0,.3);
    transition: 0.2s;
    }

    .btn-novo-cliente:hover {
        transform: scale(1.1);
    }

    .btn-save{
        background-color: #ffc30d;
        color: white;
    }

</style>

<h1 class="main-title text-2xl font-semibold mt-3">Clientes Cadastrados</h1>

<button class="btn-novo-cliente" @onclick="AbrirModal">
    +
</button>

@if (modalAberto)
{
    <div class="modal-backdrop fade show" style="position: fixed; inset: 0; z-index:1040;"></div>

    <div class="modal fade show d-block" style="z-index:1050;">
        <div class="modal-dialog">
            <div class="modal-content p-4">

                <h4 class="main-title text-xl font-semibold mb-3">Cadastrar Cliente</h4>

                <div class="d-flex gap-3 mb-3">
                    <AppExemplo.Components.VV.TextField 
                        Label="Nome" 
                        Placeholder="Digite o nome..." 
                        @bind-Value="_novoCliente.Nome" 
                        class="flex-1" />
                </div>

                <div class="d-flex gap-3 mb-3">
                    <AppExemplo.Components.VV.TextField 
                        Label="Telefone" 
                        Placeholder="Digite o telefone..." 
                        @bind-Value="_novoCliente.Telefone" 
                        class="flex-1" />
                </div>

                <div class="d-flex gap-3 mb-3">
                    <AppExemplo.Components.VV.TextField 
                        Label="Email" 
                        Placeholder="Digite o email..." 
                        @bind-Value="_novoCliente.Email" 
                        class="flex-1" />
                </div>

                <div class="d-flex gap-3 mb-3">
                    <AppExemplo.Components.VV.TextField 
                        Label="CPF" 
                        Placeholder="Digite o CPF..." 
                        @bind-Value="_novoCliente.Cpf" 
                        class="flex-1" />
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button class="btn btn-secondary" @onclick="FecharModal">Cancelar</button>
                    <button class="btn btn-save" @onclick="SalvarModal">Salvar</button>
                </div>

            </div>
        </div>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>E-mail</th>
            <th>CPF</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var cliente in listaClientes)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Telefone</td>
                <td>@cliente.Email</td>
                <td>@cliente.Cpf</td>
                <td>
                    <div class="flex">
                        <a href="javascript:void(0)" class="mr-3" title="Atualizar" @onclick="() => AbrirModalEdicao(cliente)">
                            <Icon>
                                <AppExemplo.Components.icons.Edit />
                            </Icon>
                        </a>

                        <a href="javascript:void(0)" title="Excluir" @onclick="() => AbrirModalExcluir(cliente)">
                            <Icon>
                                <AppExemplo.Components.icons.Exclude />
                            </Icon>
                        </a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>

@if (modalEdicaoAberto)
{
    <div class="modal-backdrop fade show"></div>

    <div class="modal fade show d-block">
        <div class="modal-dialog">
            <div class="modal-content p-4">

                <h4 class="main-title">Atualizar Cliente</h4>

                <div class="flex-column gap-3 mb-3">
                    <TextField Label="Nome" @bind-Value="_clienteEdicao.Nome" />
                </div>                
                    
                <div class="flex-column gap-3 mb-3">
                    <TextField Label="Telefone" @bind-Value="_clienteEdicao.Telefone" />
                </div>

                <div class="flex-column gap-3 mb-3">
                    <TextField Label="Email" @bind-Value="_clienteEdicao.Email" />
                </div>

                <div class="flex-column gap-3 mb-3">
                    <TextField Label="CPF" @bind-Value="_clienteEdicao.Cpf" />
                </div>

                <div class="d-flex justify-content-end gap-2 mt-3">
                    <button class="btn btn-secondary" @onclick="FecharModalEdicao">Cancelar</button>
                    <button class="btn btn-save" @onclick="SalvarEdicao">Salvar</button>
                </div>

            </div>
        </div>
    </div>
}

@if (modalExcluirAberto)
{
    <div class="modal-backdrop fade show"></div>

    <div class="modal fade show d-block">
        <div class="modal-dialog modal-sm">
            <div class="modal-content p-4 text-center">

                <h5>Deseja realmente excluir?</h5>
                <strong>@_clienteExcluir?.Nome</strong>

                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button class="btn btn-secondary" @onclick="FecharModalExcluir">Cancelar</button>
                    <button class="btn btn-danger" @onclick="ConfirmarExclusao">Excluir</button>
                </div>

            </div>
        </div>
    </div>
}


@code {
    private List<Cliente> listaClientes = new();

    private bool modalAberto = false;
    private bool modalEdicaoAberto = false;
    private bool modalExcluirAberto = false;

    // inicializações com todos os campos obrigatórios preenchidos para evitar CS9035
    private Cliente _novoCliente = new Cliente
    {
        Nome = string.Empty,
        Telefone = string.Empty,
        Email = string.Empty,
        Cpf = string.Empty
    };

    private Cliente _clienteEdicao = new Cliente
    {
        Nome = string.Empty,
        Telefone = string.Empty,
        Email = string.Empty,
        Cpf = string.Empty
    };

    private Cliente? _clienteExcluir;

    protected override void OnInitialized()
    {
        CarregarClientes();
    }

    private void CarregarClientes()
    {
        listaClientes = ClienteDAO.ListarTodos();
    }

    // ===== CADASTRO =====
    private async Task AbrirModal()
    {
        _novoCliente = new Cliente
        {
            Nome = "",
            Telefone = "",
            Email = "",
            Cpf = ""
        };

        modalAberto = true;
        await InvokeAsync(StateHasChanged);
    }

    private void FecharModal()
    {
        modalAberto = false;
    }

    private void SalvarModal()
    {
        try
        {
            ClienteDAO.Inserir(_novoCliente);
            modalAberto = false;
            CarregarClientes();
        }
        catch (Exception ex)
        {
            // trate/logue o erro conforme sua necessidade
        }
        Console.WriteLine("SALVOU: " + _novoCliente.Nome);
    }

    // ===== EDIÇÃO =====
    private void AbrirModalEdicao(Cliente cliente)
    {
        // cria uma cópia com todos os campos preenchidos
        _clienteEdicao = new Cliente
        {
            Id = cliente.Id,
            Nome = cliente.Nome ?? string.Empty,
            Telefone = cliente.Telefone ?? string.Empty,
            Email = cliente.Email ?? string.Empty,
            Cpf = cliente.Cpf ?? string.Empty
        };

        modalEdicaoAberto = true;
    }

    private void FecharModalEdicao()
    {
        modalEdicaoAberto = false;
    }

    private void SalvarEdicao()
    {
        try
        {
            ClienteDAO.Atualizar(_clienteEdicao);
            modalEdicaoAberto = false;
            CarregarClientes();
        }
        catch (Exception ex)
        {
            // trate/logue o erro conforme sua necessidade
        }
    }

    // ===== EXCLUSÃO =====
    private void AbrirModalExcluir(Cliente cliente)
    {
        _clienteExcluir = cliente;
        modalExcluirAberto = true;
    }

    private void FecharModalExcluir()
    {
        modalExcluirAberto = false;
        _clienteExcluir = null;
    }

    private void ConfirmarExclusao()
    {
        if (_clienteExcluir != null)
        {
            try
            {
                ClienteDAO.Excluir(_clienteExcluir.Id);
                modalExcluirAberto = false;
                CarregarClientes();
            }
            catch (Exception ex)
            {
                // trate/logue
            }
        }
    }
}