@page "/clientes"
@using AppExemplo.Models;
@inject ClienteDAO ClienteDAO;
@inject NavigationManager Navigation;

<PageTitle>Clientes Cadastrados</PageTitle>

<style>
	.main-title {
		margin-bottom: 1.5rem;
		font-weight: 600;
	}

		.main-title::before {
			content: "";
			width: 8px;
			height: 100%;
			border: 2px solid #e39b34;
			margin-right: 0.5rem;
		}
</style>

<h1 class="main-title text-2xl font-semibold mt-3">Clientes Cadastrados</h1>

<a href="/cliente-form" class="btn btn-sm btn-primary">Novo Cliente</a>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>E-mail</th>
            <th>CPF</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var cliente in listaClientes)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Telefone</td>
                <td>@cliente.Email</td>
                <td>@cliente.Cpf</td>
                <td>
                    <a href="/cliente/@cliente.Id/atualizar" class="btn btn-sm btn-primary mr-2">
                        <i class="fas fa-edit"></i> Atualizar
                    </a>
                    <a href="/cliente/@cliente.Id/excluir" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i>Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    private List<Cliente> listaClientes = new();

    protected override void OnInitialized()
    {
        CarregarClientes();
    }

    private void CarregarClientes()
    {
        listaClientes = ClienteDAO.ListarTodos();
    }
}
