@page "/"

<PageTitle>Acesso Rápido</PageTitle>

<div class="p-6 space-y-8">

    <!-- Título -->
    <h1 class="text-2xl font-bold text-gray-800 flex items-center gap-3">
        <AppExemplo.Components.icons.Home Width="22" Height="22" />
        Acesso Rápido
    </h1>

    <!-- Grid de atalhos -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">

        <!-- Relatórios -->
        <NavLink href="/relatorios"
                 class="flex flex-col items-center justify-center gap-3 p-6 bg-white shadow-md rounded-xl border hover:bg-[#E39B34] transition">
            <AppExemplo.Components.icons.Report Width="32" Height="32" Color="#E39B34" />
            <span class="font-semibold text-gray-700">Relatórios</span>
            <p class="text-sm text-gray-500 text-center">Visualize estatísticas e relatórios detalhados.</p>
        </NavLink>

        <!-- Clientes -->
        <NavLink href="/clientes"
                 class="flex flex-col items-center justify-center gap-3 p-6 bg-white shadow-md rounded-xl border hover:bg-[#E39B34]/10 transition">
            <AppExemplo.Components.icons.AddPeople Width="32" Height="32" Color="#E39B34" />
            <span class="font-semibold text-gray-700">Clientes</span>
            <p class="text-sm text-gray-500 text-center">Gerencie cadastro e informações dos clientes.</p>
        </NavLink>

        <!-- Agendamentos -->
        <NavLink href="/agendamentos"
                 class="flex flex-col items-center justify-center gap-3 p-6 bg-white shadow-md rounded-xl border hover:bg-[#E39B34]/10 transition">
            <AppExemplo.Components.icons.Calendar Width="32" Height="32" Color="#E39B34" />
            <span class="font-semibold text-gray-700">Agendamentos</span>
            <p class="text-sm text-gray-500 text-center">Controle e acompanhe reservas facilmente.</p>
        </NavLink>

        <!-- Funcionários -->
        <NavLink href="/funcionarios"
                 class="flex flex-col items-center justify-center gap-3 p-6 bg-white shadow-md rounded-xl border hover:bg-[#E39B34]/10 transition">
            <AppExemplo.Components.icons.Peoples Width="32" Height="32" Color="#E39B34" />
            <span class="font-semibold text-gray-700">Funcionários</span>
            <p class="text-sm text-gray-500 text-center">Cadastre e gerencie sua equipe.</p>
        </NavLink>

        <!-- Quadras -->
        <NavLink href="/quadras"
                 class="flex flex-col items-center justify-center gap-3 p-6 bg-white shadow-md rounded-xl border hover:bg-[#E39B34]/10 transition">
            <AppExemplo.Components.icons.Court Width="32" Height="32" Color="#E39B34" />
            <span class="font-semibold text-gray-700">Quadras</span>
            <p class="text-sm text-gray-500 text-center">Administre quadras disponíveis e horários.</p>
        </NavLink>

        <!-- Configurações -->
        <NavLink href="/configuracoes"
                 class="flex flex-col items-center justify-center gap-3 p-6 bg-white shadow-md rounded-xl border hover:bg-[#E39B34]/10 transition">
            <AppExemplo.Components.icons.Settings Width="32" Height="32" Color="#E39B34" />
            <span class="font-semibold text-gray-700">Configurações</span>
            <p class="text-sm text-gray-500 text-center">Ajuste preferências e parâmetros do sistema.</p>
        </NavLink>
    </div>

    <!-- Seção extra: visão rápida -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-10">
        <div class="p-6 bg-white rounded-xl shadow-md">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Agendamentos Hoje</h2>
            <p class="text-3xl font-bold text-[#E39B34]">12</p>
            <p class="text-sm text-gray-500">Total de reservas confirmadas.</p>
        </div>

        <div class="p-6 bg-white rounded-xl shadow-md">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Clientes Ativos</h2>
            <p class="text-3xl font-bold text-[#E39B34]">58</p>
            <p class="text-sm text-gray-500">Clientes cadastrados com status ativo.</p>
        </div>
    </div>

</div>
